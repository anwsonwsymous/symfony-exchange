{% extends 'base.html.twig' %}

{% block title %}Convert Currency{% endblock %}

{% block body %}
    <div class="container mt-2">
        <h2 class="mb-4">Currency Converter</h2>

        {{ form_start(form, {'action': path('exchange_process'), 'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

        <div class="form-group">
            {{ form_label(form.amount) }}
            {{ form_widget(form.amount, {'attr': {'class': 'form-control', 'autocomplete': 'off'}}) }}
            {{ form_errors(form.amount) }}
        </div>

        <div class="form-group">
            {{ form_label(form.fromCurrency) }}
            {{ form_widget(form.fromCurrency, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.fromCurrency) }}
        </div>

        <div class="form-group">
            {{ form_label(form.toCurrency) }}
            {{ form_widget(form.toCurrency, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.toCurrency) }}
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Convert</button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
